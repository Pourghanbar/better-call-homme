{
  "family": "production-better-call-homme-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::683494507058:role/production-better-call-homme-execution-role",
  "taskRoleArn": "arn:aws:iam::683494507058:role/production-better-call-homme-task-role",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "683494507058.dkr.ecr.us-east-1.amazonaws.com/better-call-homme:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "DB_HOST",
          "value": "localhost"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_NAME",
          "value": "better_call_homme"
        },
        {
          "name": "DB_USER",
          "value": "postgres"
        },
        {
          "name": "DB_PASSWORD",
          "value": "password"
        },
        {
          "name": "TWILIO_ACCOUNT_SID",
          "value": "test"
        },
        {
          "name": "TWILIO_AUTH_TOKEN",
          "value": "test"
        },
        {
          "name": "TWILIO_PHONE_NUMBER",
          "value": "+1234567890"
        },
        {
          "name": "OPENAI_API_KEY",
          "value": "test"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/production-better-call-homme",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
} 